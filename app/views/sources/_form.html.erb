<%= form_for(@source) do |f| %>
  <% if @source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h2>

      <ul>
      <% @source.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-primary">
    <div class="panel-heading clearfix">
      <% if @source.name %>
        <h3 class="panel-title pull-left" style="padding-top: 7.5px;"><%= @source.name %></h3>
      <% else %>
        <h3 class="panel-title pull-left" style="padding-top: 7.5px;">New Source</h3>
      <% end %>
      <div class="btn-group pull-right">
        <%= link_to sources_path, class: "btn btn-default btn-sm" do %>
          <i class="glyphicon glyphicon-chevron-left"></i>
        <% end %>
        <%= button_tag(type: 'submit', class: "btn btn-default btn-sm") do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <div class="field">
        <%= f.text_field :name, class: "form-control", placeholder: "Title" %>
      </div>
      <div class="field">
        <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
      </div>
      <div class="field">
        <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
      </div>
    </div>
  </div>
<% end %>
